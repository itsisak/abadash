<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<Pane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="gamePane"
      stylesheets="@App.css"
      prefWidth="20" prefHeight="20">
    <Canvas fx:id="canvas" width="20" height="20"/>
    <HBox fx:id="attemptTextBox" prefHeight="100" alignment="CENTER" layoutY="75">
      <Text fx:id="attemptText" text="ATTEMPT 1">
        <font>
          <Font size="50" />
        </font>
      </Text>
    </HBox>
    <ImageView fx:id="menuBtn" fitWidth="50" fitHeight="50" layoutY="20">
            <image>
                <Image url="@icons/home.png" />
            </image>
        </ImageView>
</Pane>