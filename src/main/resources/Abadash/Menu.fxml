<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>


<Pane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="MenuContainer"
      stylesheets="@App.css"
      prefHeight="20" prefWidth="20">
    <children>
      <GridPane fx:id="titleContainer" layoutY="50" prefHeight="100" hgap="10" vgap="0" alignment="CENTER" gridLinesVisible="true">
         <columnConstraints>
            <ColumnConstraints fillWidth="true" halignment="RIGHT" hgrow="NEVER" />
            <ColumnConstraints fillWidth="true" halignment="LEFT" hgrow="NEVER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints fillHeight="false" valignment="CENTER" vgrow="NEVER"/>
         </rowConstraints>
         <children>
            <ImageView fx:id="logo" fitWidth="100" fitHeight="100" GridPane.columnIndex="0">
               <image>
                  <Image url="@sprites/abakule.png" />
               </image>
            </ImageView>
            <Text fx:id="title" text="AbaDash" layoutX="0" layoutY="100" GridPane.columnIndex="1">
               <font>
                  <Font size="100" />
               </font>
            </Text>
         </children>
      </GridPane>
      <Button fx:id="startGameBtn" text="START GAME" prefWidth="500" prefHeight="50" mnemonicParsing="false">
         <font>
            <Font size="60" />
         </font>
      </Button>
   </children>
</Pane>