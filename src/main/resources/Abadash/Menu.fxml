<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>


<Pane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="menuPane"
      stylesheets="@App.css"
      prefHeight="20" prefWidth="20">
    <children>
      <GridPane fx:id="titleContainer" layoutY="150" prefHeight="120" hgap="10" vgap="0" alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints fillWidth="true" halignment="RIGHT" hgrow="NEVER" />
            <ColumnConstraints fillWidth="true" halignment="LEFT" hgrow="NEVER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints fillHeight="false" valignment="CENTER" vgrow="NEVER"/>
         </rowConstraints>
         <children>
            <ImageView fx:id="logo" fitWidth="120" fitHeight="120" GridPane.columnIndex="0">
               <image>
                  <Image url="@sprites/abakule.png" />
               </image>
            </ImageView>
            <Text fx:id="title" text="ABADASH" layoutX="0" layoutY="0" GridPane.columnIndex="1">
               <font>
                  <Font size="100" />
               </font>
            </Text>
         </children>
      </GridPane>
      <ImageView fx:id="playBtn" fitWidth="150" fitHeight="150">
            <image>
                <Image url="@icons/play.png" />
            </image>
        </ImageView>
        <ImageView fx:id="githubBtn" fitWidth="50" fitHeight="50" layoutX="20" >
            <image>
                <Image url="@icons/github.png" />
            </image>
        </ImageView>
   </children>
</Pane>