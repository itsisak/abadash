<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<Pane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="stageSelectPane"
      stylesheets="@App.css"
      prefHeight="20" prefWidth="20">
    <children>
        <HBox fx:id="stageContainer" />
        <ImageView fx:id="menuBtn" fitWidth="50" fitHeight="50" layoutY="20">
            <image>
                <Image url="@icons/home.png" />
            </image>
        </ImageView>
        <ImageView fx:id="previousStageBtn" fitWidth="100" fitHeight="100">
            <image>
                <Image url="@icons/arrow.png" />
            </image>
        </ImageView>
        <ImageView fx:id="nextStageBtn" fitWidth="100" fitHeight="100">
            <image>
                <Image url="@icons/arrow.png" />
            </image>
        </ImageView>
        <HBox fx:id="pageIndicator" spacing="7.5" alignment="CENTER"/>
    </children>
</Pane>